<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.NewAccountController"
      spacing="0"
      alignment="TOP_CENTER"
      stylesheets="@style.css"
      styleClass="root">

    <!-- Header Section matching transfer funds page -->
    <VBox styleClass="header-section" VBox.vgrow="NEVER">
        <Label text="Create New Account" styleClass="main-title"/>
        <Label text="Open a new account with your preferred type" styleClass="subtitle"/>
    </VBox>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
        <VBox spacing="30" alignment="CENTER" styleClass="form-container">
            <padding>
                <Insets top="40" right="50" bottom="40" left="50"/>
            </padding>

            <GridPane hgap="25" vgap="30" alignment="CENTER">
                <padding>
                    <Insets top="20" right="0" bottom="20" left="0"/>
                </padding>

                <!-- Account Type Section -->
                <VBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
                    <Label text="ACCOUNT TYPE" styleClass="section-header"/>
                </VBox>

                <Label text="Select Account Type:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
                <ComboBox fx:id="accountTypeComboBox" promptText="Choose account type"
                          GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-combo"
                          prefWidth="300"/>

                <!-- Initial Deposit Section -->
                <VBox spacing="8" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
                    <Label text="INITIAL DEPOSIT" styleClass="section-header"/>
                </VBox>

                <Label text="Enter Initial Deposit:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
                <TextField fx:id="initialDepositField" promptText="0.00"
                           GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="form-input"
                           prefWidth="300"/>

                <!-- Buttons -->
                <VBox spacing="15" alignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2">
                    <Button text="ðŸ¦ Create Account" onAction="#handleCreateAccount"
                            styleClass="dashboard-button" prefWidth="350"/>
                    <Button text="â† Back to Dashboard" onAction="#handleBack"
                            styleClass="dashboard-button" prefWidth="350"/>
                </VBox>

                <!-- Status Label -->
                <Label fx:id="statusLabel" text="" styleClass="status-label"
                       GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"
                       alignment="CENTER"/>
            </GridPane>
        </VBox>
    </ScrollPane>
</VBox>