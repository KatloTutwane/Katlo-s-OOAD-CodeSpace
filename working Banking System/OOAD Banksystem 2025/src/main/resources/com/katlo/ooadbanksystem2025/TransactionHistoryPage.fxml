<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.TransactionHistoryController"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="@style.css"
      styleClass="root">

    <Label text="Transaction History" styleClass="main-title"/>

    <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" minWidth="150"/>
            <TableColumn fx:id="typeColumn" text="Type" minWidth="150"/>
            <TableColumn fx:id="amountColumn" text="Amount" minWidth="120"/>
            <TableColumn fx:id="fromColumn" text="From Account" minWidth="150"/>
            <TableColumn fx:id="toColumn" text="To Account" minWidth="150"/>
            <TableColumn fx:id="detailsColumn" text="Details" minWidth="200"/>
        </columns>
    </TableView>

    <Button text="Back" onAction="#handleBack" styleClass="dashboard-button"/>

</VBox>
