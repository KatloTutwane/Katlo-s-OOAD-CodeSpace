<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.AccountListController"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="@style.css"
      styleClass="root">

    <Label text="My Accounts" styleClass="main-title"/>

    <!-- Customer Info Section -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="customer-info-box">
        <Label text="Customer:" styleClass="info-label"/>
        <Label fx:id="customerNameLabel" text="Loading..." styleClass="customer-name"/>
    </HBox>

    <!-- Accounts Table -->
    <TableView fx:id="accountTable" VBox.vgrow="ALWAYS" styleClass="accounts-table">
        <columns>
            <TableColumn fx:id="accountIdColumn" text="Account Number" prefWidth="200"/>
            <TableColumn fx:id="accountTypeColumn" text="Account Type" prefWidth="150"/>
            <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Refresh Accounts" onAction="#handleRefresh" styleClass="action-button"/>
        <Button text="Back to Dashboard" onAction="#handleBack" styleClass="dashboard-button"/>
    </HBox>

</VBox>