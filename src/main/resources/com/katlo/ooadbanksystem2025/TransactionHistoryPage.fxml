<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.TransactionHistoryController"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="@style.css"
      styleClass="root">

    <Label text="Transaction History" styleClass="main-title"/>

    <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date"/>
            <TableColumn fx:id="typeColumn" text="Type"/>
            <TableColumn fx:id="amountColumn" text="Amount"/>
            <TableColumn fx:id="balanceColumn" text="Balance After"/>
        </columns>
    </TableView>

    <Button text="Back to Accounts" onAction="#handleBack" styleClass="dashboard-button"/>

</VBox>
