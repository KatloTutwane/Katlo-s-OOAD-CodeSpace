<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.AccountListController"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="@style.css"
      styleClass="root">

    <Label text="My Accounts" styleClass="main-title"/>

    <TableView fx:id="accountTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="accountIdColumn" text="Account ID"/>
            <TableColumn fx:id="accountTypeColumn" text="Account Type"/>
            <TableColumn fx:id="balanceColumn" text="Balance"/>
        </columns>
    </TableView>

    <Button text="Back to Dashboard" onAction="#handleBack" styleClass="dashboard-button"/>

</VBox>
