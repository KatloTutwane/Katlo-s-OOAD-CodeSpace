<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.DashboardController"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="@style.css"
      styleClass="root">

    <!-- Page Title -->
    <Label fx:id="welcomeLabel" text="Welcome, Customer!" styleClass="main-title"/>

    <!-- Scrollable TilePane for Buttons -->
    <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane"
                hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
        <TilePane hgap="20" vgap="20" prefColumns="2" tileAlignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="View Profile" onAction="#handleViewProfile" styleClass="dashboard-button"/>
            <Button text="View Accounts" onAction="#handleViewAccounts" styleClass="dashboard-button"/>
            <Button text="Create New Account" onAction="#handleCreateAccount" styleClass="dashboard-button"/>
            <Button text="Transaction History" onAction="#handleTransactionHistory" styleClass="dashboard-button"/>
            <Button text="Transfer Funds" onAction="#handleTransferFunds" styleClass="dashboard-button"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
        </TilePane>
    </ScrollPane>

</VBox>
