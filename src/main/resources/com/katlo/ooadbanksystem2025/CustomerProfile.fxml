<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.CustomerProfileController"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="@style.css"
      styleClass="root">

    <Label text="Customer Profile" styleClass="main-title"/>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-pane">
        <GridPane hgap="15" vgap="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TextField fx:id="firstNameField" promptText="First Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="lastNameField" promptText="Last Name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <TextField fx:id="emailField" promptText="Email" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="addressField" promptText="Address" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <TextField fx:id="nationalIdField" promptText="National ID" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

            <Button text="Save Profile" onAction="#handleSaveProfile"
                    GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"
                    styleClass="dashboard-button"/>
        </GridPane>
    </ScrollPane>

</VBox>
